<resources>

	<style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

	<style name="SplashScreen" parent="Theme.SplashScreen">
		<item name="windowSplashScreenBackground">@color/lemon_chiffon</item>
		<item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
		<item name="postSplashScreenTheme">@style/AppTheme</item>
	</style>

	<style name="AppTheme" parent="BaseAppTheme">
		<item name="colorPrimary">@color/bright_gray</item>
		<item name="colorPrimaryDark">@color/manatee</item>
		<item name="colorAccent">@color/han_blue</item>
	</style>
</resources>